<Window x:Class="Facienda2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Facienda2"
        mc:Ignorable="d"
        Title="Facienda 2.0.1" Height="600" Width="900"
        Background="#F5F7FA"
        Icon="icon.ico"
        Closing="MainWindow_Closing">

    <Window.Resources>
        <!-- Invisible CheckBox Style -->
        <Style x:Key="InvisibleCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Float Button Base Style -->
        <Style x:Key="FloatButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="Shadow" Fill="#3B82F6">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#3B82F6" 
                                                    Opacity="0.3" 
                                                    BlurRadius="20" 
                                                    ShadowDepth="0"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <Ellipse x:Name="Background" Fill="#3B82F6"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="Fill" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Background" Property="Fill" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Float Button Style -->
        <Style x:Key="SecondaryFloatButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="Shadow" Fill="White">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                    Opacity="0.15" 
                                                    BlurRadius="20" 
                                                    ShadowDepth="4"
                                                    Direction="270"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <Ellipse x:Name="Background" Fill="White"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="Fill" Value="#F8FAFC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Background" Property="Fill" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Date Converter -->
        <local:DateToDayOfWeekConverter x:Key="DateToDayOfWeekConverter"/>
    </Window.Resources>

    <Canvas>
        <!-- Task Cards ItemsControl -->
        <ItemsControl ItemsSource="{Binding Tasks}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left" Value="{Binding PositionX}"/>
                    <Setter Property="Canvas.Top" Value="{Binding PositionY}"/>
                    <Setter Property="Panel.ZIndex" Value="0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDone}" Value="True">
                            <Setter Property="Panel.ZIndex" Value="-1"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ItemsControl.ItemContainerStyle>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Style="{StaticResource InvisibleCheckBoxStyle}"
                              IsChecked="{Binding IsDone, Mode=TwoWay}"
                              PreviewMouseLeftButtonDown="TaskCard_PreviewMouseLeftButtonDown"
                              PreviewMouseMove="TaskCard_PreviewMouseMove"
                              PreviewMouseLeftButtonUp="TaskCard_PreviewMouseLeftButtonUp">
                        <CheckBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Due Date" Click="MenuItem_SetDueDate_Click"/>
                                <Separator/>
                                <MenuItem Header="Delete" Click="MenuItem_DeleteTask_Click"/>
                            </ContextMenu>
                        </CheckBox.ContextMenu>
                        <Border Width="280" 
                                CornerRadius="12"
                                Padding="20,16"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="20" ShadowDepth="4" Direction="270"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDone}" Value="True">
                                            <Setter Property="Background" Value="#F8FAFC"/>
                                            <Setter Property="Opacity" Value="0.7"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="15" ShadowDepth="2" Direction="270"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="25" ShadowDepth="6" Direction="270"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Accent Bar -->
                                <Border Grid.Column="0" Width="4" CornerRadius="2" Margin="0,0,12,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#3B82F6" Offset="0"/>
                                                        <GradientStop Color="#2563EB" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                    <Setter Property="Background" Value="#CBD5E1"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!-- Content -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#1A1A1A"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock FontSize="13" Margin="0,8,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#6B7280"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="📅" Foreground="#3B82F6"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding DueDate, StringFormat='{}{0:MM/dd}', TargetNullValue='--/--'}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding DueDate, Converter={StaticResource DateToDayOfWeekConverter}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </CheckBox>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Floating Action Buttons -->

        <!-- Clear Completed Tasks Button -->
        <Button Style="{StaticResource SecondaryFloatButtonStyle}"
                Canvas.Right="24"
                Canvas.Bottom="96" Click="Button_Click_1">
            <Viewbox Width="22" Height="22">
                <Canvas Width="24" Height="24">
                    <!-- Trash Icon -->
                    <Path Fill="#6B7280" Data="M3 6h18M8 6V4c0-1 0-2 2-2h4c2 0 2 1 2 2v2m3 0v14c0 1 0 2-2 2H7c-2 0-2-1-2-2V6h14zM10 11v6M14 11v6"/>
                </Canvas>
            </Viewbox>
        </Button>

        <!-- Add Task Button (Primary) -->
        <Button Style="{StaticResource FloatButtonStyle}"
                Canvas.Right="24"
                Canvas.Bottom="24" Click="Button_Click">
            <Viewbox Width="24" Height="24">
                <Canvas Width="24" Height="24">
                    <!-- Plus Icon -->
                    <Path Fill="White" Data="M12 5v14M5 12h14" StrokeThickness="2" Stroke="White" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                </Canvas>
            </Viewbox>
        </Button>
    </Canvas>
</Window>